<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RatingBar
        android:id="@+id/rBarReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"/>

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:background="@drawable/layout_border4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영화 제목"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <!--<Button
        android:id="@+id/btnMovieSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="영화 선택"/>-->

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_weight="1"
        android:id="@+id/tvMovie"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </TextView>

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border4"
        android:text="관람일자"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_weight="1"
        android:id="@+id/tvDate"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:background="@drawable/layout_border4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 제목"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_weight="1"
        android:id="@+id/tvReviewNM"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border4"
        android:text="리뷰 내용"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:fontFamily="@font/hoonddukbokki"
        android:layout_weight="1"
        android:id="@+id/tvReview"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="10"/>

    <LinearLayout
        android:id="@+id/LinearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/hoonddukbokki"
            android:id="@+id/btnReturnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="리스트로 돌아가기"/>



    </LinearLayout>





</LinearLayout>