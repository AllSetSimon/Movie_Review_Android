<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/line1"
    android:orientation="vertical">

    <EditText
        android:id="@+id/udt_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:hint="아이디"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:background="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/udt_pwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="비밀번호"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_https_black_24dp"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:background="@color/colorPrimary"
        android:password="true"
        />

    <EditText
        android:id="@+id/udt_Name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="이름"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:background="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/udt_mail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="이메일"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:background="#9190FF"
        />


    <EditText
        android:id="@+id/udt_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="휴대폰 번호 (-제외)"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_local_phone_black_24dp"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:background="#9190FF"
        android:inputType="number"
        />

    <Button
        android:id="@+id/udt_gender"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="75dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:padding="10dp"
        android:text="성별선택"
        android:textSize="15dp"
        android:drawableStart="@drawable/ic_mood_black_24dp"
        android:drawableLeft="@drawable/ic_mood_black_24dp"
        android:background="#9190FF"
        android:inputType="number"
        />


    <Button
        android:id="@+id/udt_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="회원정보수정"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:drawableStart="@drawable/ic_supervisor_account_black_24dp"
        android:drawableEnd="@drawable/ic_supervisor_account_black_24dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="68dp"
        android:layout_gravity="center"
        android:textColor="#9190FF"
        android:textStyle="bold"
        android:textSize="11dp"
        android:text="* 보라색은 필수 기재사항이 아님"/>







</LinearLayout>